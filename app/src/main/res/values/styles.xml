<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextoBase">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Titulo" parent="@style/TextoBase">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitulo" parent="@style/TextoBase">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="TextoPrincipal" parent="@style/TextoBase">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextoSecundario" parent="@style/TextoBase">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="TextoAyuda" parent="@style/TextoBase">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnTertiaryContainer</item>
    </style>
</resources>
